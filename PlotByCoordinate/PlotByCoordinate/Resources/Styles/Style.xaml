            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="Line" TargetType="Polyline">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Stroke" Value="White" />
        <Setter Property="StrokeThickness" Value="3" />
    </Style>
    <Style x:Key="Triangle" TargetType="Polygon">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Stroke" Value="White" />
        <Setter Property="StrokeThickness" Value="3" />
    </Style>
</ResourceDictionary>