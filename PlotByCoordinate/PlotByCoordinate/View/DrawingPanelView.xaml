<Window x:Class="PlotByCoordinate.View.DrawingPanelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" MouseMove="Window_MouseMove"
        xmlns:local="clr-namespace:PlotByCoordinate.View"
        mc:Ignorable="d"
        WindowStyle="None" 
        AllowsTransparency="True"
        Title="DrawingPanelView" Height="600" Width="800"
        DataContext="{Binding Path=Corrdinate, Source={StaticResource Locator}}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="12*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Background="#3448a1"/>
        <Border Grid.Row="0" Grid.Column="1" Background="#3448a1"/>
        <Border Grid.Row="1" Grid.Column="0" Background="#000000"/>
        <Border Grid.Row="1" Grid.Column="1" Background="#f1f1f1"/>
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Label Content="三角形" HorizontalAlignment="Center"></Label>
            <Label Content="P1" HorizontalAlignment="Left"></Label>
            <DockPanel>
                <TextBox Width="60" DockPanel.Dock="Left" Background="LightBlue" Text="{Binding CoordinateValue.TriangleX1}" ></TextBox>
                <TextBox Width="60" DockPanel.Dock="Right" Background="LightBlue" Text="{Binding CoordinateValue.TriangleY1}"></TextBox>
            </DockPanel>
            <Label Content="P2" HorizontalAlignment="Left"></Label>
            <DockPanel>
                <TextBox Width="60" DockPanel.Dock="Left" Background="LightBlue" Text="{Binding CoordinateValue.TriangleX2}"></TextBox>
                <TextBox Width="60" DockPanel.Dock="Right" Background="LightBlue" Text="{Binding CoordinateValue.TriangleY2}"></TextBox>
            </DockPanel>
            <Label Content="P3" HorizontalAlignment="Left"></Label>
            <DockPanel>
                <TextBox Width="60" DockPanel.Dock="Left" Background="LightBlue" Text="{Binding CoordinateValue.TriangleX3}"></TextBox>
                <TextBox Width="60" DockPanel.Dock="Right" Background="LightBlue" Text="{Binding CoordinateValue.TriangleY3}"></TextBox>
            </DockPanel>
            <Label Content="直线" HorizontalAlignment="Center"></Label>
            <Label Content="P1" HorizontalAlignment="Left"></Label>
            <DockPanel>
                <TextBox Width="60" DockPanel.Dock="Left" Background="LightBlue" Text="{Binding CoordinateValue.LineX1}"></TextBox>
                <TextBox Width="60" DockPanel.Dock="Right" Background="LightBlue" Text="{Binding CoordinateValue.LineY1}"></TextBox>
            </DockPanel>
            <Label Content="P2" HorizontalAlignment="Left"></Label>
            <DockPanel>
                <TextBox Width="60" DockPanel.Dock="Left" Background="LightBlue" Text="{Binding CoordinateValue.LineX2}"></TextBox>
                <TextBox Width="60" DockPanel.Dock="Right" Background="LightBlue" Text="{Binding CoordinateValue.LineY2}"></TextBox>
            </DockPanel>
        </StackPanel>
        <Canvas Grid.Row="1" Grid.Column="0">
            <Line X1="{Binding CoordinateValue.TriangleX1}" Y1="{Binding CoordinateValue.TriangleY1}" X2="{Binding CoordinateValue.TriangleX2}"
                  Y2="{Binding CoordinateValue.TriangleY2}" Stroke="White" StrokeThickness="3"></Line>
            <Line X1="{Binding CoordinateValue.TriangleX2}" Y1="{Binding CoordinateValue.TriangleY2}" X2="{Binding CoordinateValue.TriangleX3}"
                  Y2="{Binding CoordinateValue.TriangleY3}" Stroke="White" StrokeThickness="3"></Line>
            <Line X1="{Binding CoordinateValue.TriangleX3}" Y1="{Binding CoordinateValue.TriangleY3}" X2="{Binding CoordinateValue.TriangleX1}"
                  Y2="{Binding CoordinateValue.TriangleY1}" Stroke="White" StrokeThickness="3"></Line>
            <Line X1="{Binding CoordinateValue.LineX1}" Y1="{Binding CoordinateValue.LineY1}" X2="{Binding CoordinateValue.LineX2}"
                  Y2="{Binding CoordinateValue.LineY2}" Stroke="White" StrokeThickness="3"></Line>
        </Canvas>
    </Grid>
</Window>
