<Window
    x:Class="PlotByCoordinate.View.DrawingPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cov="clr-namespace:PlotByCoordinate.Converts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
    x:Name="Win"
    Title="DrawingPanelView"
    Width="800"
    Height="600"
    AllowsTransparency="True"
    BorderBrush="#3448a1"
    BorderThickness="2"
    DataContext="{Binding Path=Coordinate, Source={StaticResource Locator}}"
    Style="{DynamicResource WindowStyle}"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <cov:LocalPointToPoint x:Key="MyPointConvertToPoint" />
            <cov:PointToImage x:Key="ToImage" />
        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding
            Key="B"
            Command="{Binding KeyDownCommand}"
            Modifiers="Ctrl" />
    </Window.InputBindings>
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="11*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Background="#3448a1"
            BorderThickness="0" />
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Background="#3448a1" />
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Background="#000000"
            BorderBrush="#3448a1" />
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Background="#f1f1f1"
            BorderBrush="#3448a1" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="20"
                Height="20"
                Margin="0,0,5,0"
                Command="{Binding MinWindowCommand}"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="最小化">
                <Canvas>
                    <Path
                        Canvas.Left="-12"
                        Canvas.Top="-1"
                        Style="{StaticResource ResourceKey=PathStyleForMinWindow}" />
                </Canvas>
            </Button>
            <Button
                Width="20"
                Height="20"
                Margin="0,0,5,0"
                Command="{Binding MaximizeOrRestoreCommand}"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="{Binding RespectToWindow.TheWindowState}">
                <Canvas>
                    <Path
                        Canvas.Left="-12"
                        Canvas.Top="-5"
                        Data="{Binding RespectToWindow.OptionForm}"
                        Style="{StaticResource ResourceKey=PathStyleForMaXWindow}" />
                </Canvas>
            </Button>
            <Button
                Width="20"
                Height="20"
                Margin="0,0,15,0"
                Command="{Binding CloseCommand}"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="关闭">
                <Canvas>
                    <Path
                        Canvas.Left="-12"
                        Canvas.Top="-5"
                        Style="{StaticResource ResourceKey=PathClose}" />
                </Canvas>
            </Button>
        </StackPanel>
        <Canvas
            Grid.Row="1"
            Grid.Column="1"
            Width="110"
            VerticalAlignment="Center">
            <Label
                Canvas.Left="49"
                Canvas.Top="-130"
                Content="," />
            <Label
                Canvas.Left="49"
                Canvas.Top="-90"
                Content="," />
            <Label
                Canvas.Left="49"
                Canvas.Top="61"
                Content="," />
            <Label
                Canvas.Left="49"
                Canvas.Top="101"
                Content="," />
            <Label
                Canvas.Left="49"
                Canvas.Top="-50"
                Content="," />
            <Image
                Canvas.Left="-13"
                Canvas.Top="-122"
                Source="/Resources/TriangleP1.png"
                Style="{StaticResource ImageStyle}" />
            <Image
                Canvas.Left="-13"
                Canvas.Top="-82"
                Source="/Resources/TriangleP2.png"
                Style="{StaticResource ImageStyle}" />
            <Image
                Canvas.Left="-13"
                Canvas.Top="-42"
                Source="/Resources/TriangleP3.png"
                Style="{StaticResource ImageStyle}" />
            <Image
                Canvas.Left="-13"
                Canvas.Top="70"
                Source="/Resources/LineP1.png"
                Style="{StaticResource ImageStyle}" />
            <Image
                Canvas.Left="-13"
                Canvas.Top="110"
                Source="/Resources/LineP2.png"
                Style="{StaticResource ImageStyle}" />
            <StackPanel
                x:Name="TrianglePanel"
                Canvas.Left="2"
                Canvas.Top="-178">
                <DockPanel HorizontalAlignment="Center">
                    <Path
                        Width="21.153"
                        Height="13.5"
                        Data="F1M0,13.5L21.153,13.5 10.577,0z M10.577,2.433L18.073,12 3.082,12z"
                        DockPanel.Dock="Left"
                        Fill="#FF3448A1" />
                    <Label Content="三角形" Foreground="#FF3448A1" />
                </DockPanel>
                <DockPanel>
                    <TextBox
                        Name="X1"
                        Width="48"
                        materialDesign:HintAssist.Hint="P1"
                        DockPanel.Dock="Left"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TriangleCoordinate.FirstPoint.X, UpdateSourceTrigger=PropertyChanged}" />
                    <Label />

                    <TextBox
                        Name="Y1"
                        Width="48"
                        materialDesign:HintAssist.Hint=""
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TriangleCoordinate.FirstPoint.Y, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel>
                    <TextBox
                        Name="X2"
                        Width="48"
                        materialDesign:HintAssist.Hint="P2"
                        DockPanel.Dock="Left"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TriangleCoordinate.SecondPoint.X, UpdateSourceTrigger=PropertyChanged}" />
                    <Label />
                    <TextBox
                        Name="Y2"
                        Width="48"
                        materialDesign:HintAssist.Hint=""
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TriangleCoordinate.SecondPoint.Y, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel>
                    <TextBox
                        Name="X3"
                        Width="48"
                        materialDesign:HintAssist.Hint="P3"
                        DockPanel.Dock="Left"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TriangleCoordinate.ThirdPoint.X, UpdateSourceTrigger=PropertyChanged}" />
                    <Label />
                    <TextBox
                        Name="Ty3"
                        Width="48"
                        materialDesign:HintAssist.Hint=""
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TriangleCoordinate.ThirdPoint.Y, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
            </StackPanel>
            <StackPanel
                x:Name="LinePanel"
                Canvas.Left="2"
                Canvas.Top="14">
                <DockPanel HorizontalAlignment="Center">
                    <Path
                        Width="15.911"
                        Height="12.662"
                        Data="F1M0.911,12.662L0,11.471 14.999,0 15.911,1.191z"
                        Fill="#FF3448A1" />
                    <Label Content="直线" Foreground="#FF3448A1" />
                </DockPanel>
                <DockPanel>
                    <TextBox
                        Name="Lx1"
                        Width="48"
                        materialDesign:HintAssist.Hint="P1"
                        DockPanel.Dock="Left"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding LineCoordinate.StartPoint.X, UpdateSourceTrigger=PropertyChanged}" />
                    <Label />
                    <TextBox
                        Name="Ly1"
                        Width="48"
                        materialDesign:HintAssist.Hint=""
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding LineCoordinate.StartPoint.Y, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel>
                    <TextBox
                        Name="Lx2"
                        Width="48"
                        materialDesign:HintAssist.Hint="P2"
                        DockPanel.Dock="Left"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding LineCoordinate.EndPoint.X, UpdateSourceTrigger=PropertyChanged}" />
                    <Label />
                    <TextBox
                        Name="Ly2"
                        Width="48"
                        materialDesign:HintAssist.Hint=""
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding LineCoordinate.EndPoint.Y, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
            </StackPanel>

        </Canvas>
        <Canvas
            x:Name="Canvas"
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Style="{StaticResource ResourceKey=CanvasStyle}">
            <Canvas.Background>
                <DrawingBrush
                    TileMode="Tile"
                    Viewport="0,0,12,12"
                    ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <DrawingGroup.Children>
                                <GeometryDrawing>
                                    <GeometryDrawing.Brush>
                                        <SolidColorBrush Color="Black" />
                                    </GeometryDrawing.Brush>
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,76,76" />
                                    </GeometryDrawing.Geometry>
                                    <GeometryDrawing.Pen>
                                        <Pen Brush="White" />
                                    </GeometryDrawing.Pen>
                                </GeometryDrawing>
                            </DrawingGroup.Children>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Canvas.Background>
            <Label
                Canvas.Left="50"
                Content="50"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="100"
                Content="100"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="150"
                Content="150"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="200"
                Content="200"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="250"
                Content="250"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="300"
                Content="300"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="350"
                Content="350"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="400"
                Content="400"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="450"
                Content="450"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="500"
                Content="500"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Left="550"
                Content="550"
                Style="{StaticResource CoordinateStyle}" />

            <Label
                Canvas.Top="50"
                Content="50"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="100"
                Content="100"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="150"
                Content="150"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="200"
                Content="200"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="250"
                Content="250"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="300"
                Content="300"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="350"
                Content="350"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="400"
                Content="400"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="450"
                Content="450"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="500"
                Content="500"
                Style="{StaticResource CoordinateStyle}" />
            <Label
                Canvas.Top="550"
                Content="550"
                Style="{StaticResource CoordinateStyle}" />
            <Image
                Canvas.Left="{Binding TriangleCoordinate.FirstPoint.X, Converter={StaticResource ToImage}}"
                Canvas.Top="{Binding TriangleCoordinate.FirstPoint.Y, Converter={StaticResource ToImage}}"
                Source="/Resources/TriangleP1.png"
                Style="{StaticResource ImageStyle}"
                Visibility="{Binding TriangleCoordinate.HiddenOrVisibleOfTriangleImage}" />
            <Image
                Canvas.Left="{Binding TriangleCoordinate.SecondPoint.X, Converter={StaticResource ToImage}}"
                Canvas.Top="{Binding TriangleCoordinate.SecondPoint.Y, Converter={StaticResource ToImage}}"
                Source="/Resources/TriangleP2.png"
                Style="{StaticResource ImageStyle}"
                Visibility="{Binding TriangleCoordinate.HiddenOrVisibleOfTriangleImage}" />
            <Image
                Canvas.Left="{Binding TriangleCoordinate.ThirdPoint.X, Converter={StaticResource ToImage}}"
                Canvas.Top="{Binding TriangleCoordinate.ThirdPoint.Y, Converter={StaticResource ToImage}}"
                Source="/Resources/TriangleP3.png"
                Style="{StaticResource ImageStyle}"
                Visibility="{Binding TriangleCoordinate.HiddenOrVisibleOfTriangleImage}" />
            <Path
                x:Name="PathTriangle"
                Canvas.Left="{Binding TriangleCoordinate.TriangleXPos}"
                Canvas.Top="{Binding TriangleCoordinate.TriangleYPos}"
                Cursor="Hand"
                Style="{DynamicResource ResourceKey=PathStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <mvvm:EventToCommand Command="{Binding MouseLeftButtonDownCommand}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <mvvm:EventToCommand Command="{Binding MouseLeftButtonUpCommand}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseMove">
                        <mvvm:EventToCommand Command="{Binding MouseMoveCommand}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Path.Data>
                    <GeometryGroup>
                        <LineGeometry
                            x:Name="FirstPointOfTriangle"
                            StartPoint="{Binding TriangleCoordinate.FirstPoint, Converter={StaticResource MyPointConvertToPoint}}"
                            EndPoint="{Binding TriangleCoordinate.SecondPoint, Converter={StaticResource MyPointConvertToPoint}}" />
                        <LineGeometry
                            x:Name="SecondPointOfTriangle"
                            StartPoint="{Binding TriangleCoordinate.SecondPoint, Converter={StaticResource MyPointConvertToPoint}}"
                            EndPoint="{Binding TriangleCoordinate.ThirdPoint, Converter={StaticResource MyPointConvertToPoint}}" />
                        <LineGeometry
                            x:Name="ThirdPointOfTriangle"
                            StartPoint="{Binding TriangleCoordinate.ThirdPoint, Converter={StaticResource MyPointConvertToPoint}}"
                            EndPoint="{Binding TriangleCoordinate.FirstPoint, Converter={StaticResource MyPointConvertToPoint}}" />
                    </GeometryGroup>
                </Path.Data>
            </Path>
            <Image
                Canvas.Left="{Binding LineCoordinate.StartPoint.X, Converter={StaticResource ToImage}}"
                Canvas.Top="{Binding LineCoordinate.StartPoint.Y, Converter={StaticResource ToImage}}"
                Source="/Resources/LineP1.png"
                Style="{StaticResource ImageStyle}"
                Visibility="{Binding LineCoordinate.HiddenOrVisibleOfLineImage}" />
            <Image
                Canvas.Left="{Binding LineCoordinate.EndPoint.X, Converter={StaticResource ToImage}}"
                Canvas.Top="{Binding LineCoordinate.EndPoint.Y, Converter={StaticResource ToImage}}"
                Source="/Resources/LineP2.png"
                Style="{StaticResource ImageStyle}"
                Visibility="{Binding LineCoordinate.HiddenOrVisibleOfLineImage}" />
            <Path
                x:Name="PathLine"
                Canvas.Left="{Binding LineCoordinate.LineXPos}"
                Canvas.Top="{Binding LineCoordinate.LineYPos}"
                Cursor="Hand"
                Style="{DynamicResource ResourceKey=PathStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <mvvm:EventToCommand Command="{Binding MouseLeftButtonDownCommand}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <mvvm:EventToCommand Command="{Binding MouseLeftButtonUpCommand}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseMove">
                        <mvvm:EventToCommand Command="{Binding MouseMoveCommand}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Path.Data>
                    <LineGeometry
                        x:Name="PointOfLine"
                        StartPoint="{Binding LineCoordinate.StartPoint, Converter={StaticResource MyPointConvertToPoint}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        EndPoint="{Binding LineCoordinate.EndPoint, Converter={StaticResource MyPointConvertToPoint}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </Path.Data>
            </Path>
        </Canvas>
    </Grid>
</Window>
